@using CloudSwyft.CloudLabs.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<link href="~/Content/login.css" rel="stylesheet" />
<div class="col-md-7 right-cont">
    <div class="right-form">
        <img class="logo-sm-cs" src="../../Content/images/logo-cs-small.png" />
        <span class="text-cs"> Start by signing in here </span>

        <section id="loginForm">
            @using (@Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "Email", @style = "margin:0px;" })
                    </div>
                </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", @style = "margin:0px;" })
                        </div>
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger .validationFont-size-login" })
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="checkbox pull-right validationFont-size">
                                @*@Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.LabelFor(m => m.RememberMe, new { @class = "remember" })*@
                                @*<p>
                                    @Html.ActionLink("Forgot your password?", "ForgotPassword", "Account", null, new { @class = "text-danger" })
                                </p>*@
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="submit" value="Sign in" class="btn btn-info signIn-btn" />
                        </div>
                    </div>
            }
        </section>
        <div class="footer">
            @*<span class="validationFont-size">
                Not yet registered?
                @Html.ActionLink("Click here to sign up", "Register")
            </span>*@
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}