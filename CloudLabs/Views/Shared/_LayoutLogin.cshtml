<!DOCTYPE html>
<html>
<head>
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0" charset="utf-8" />
    <meta name="description" content="" />
    <title>@ViewBag.Title</title>
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
</head>

<body>
    <script type="text/javascript">
      var apiUrl = "@System.Configuration.ConfigurationManager.AppSettings["Cloudswyft.Api"]";
      var authUrl = '@System.Configuration.ConfigurationManager.AppSettings["CloudSwyftAuthServerUrl"]';
    </script>

    <div id="wrapper">
        <div class="col-md-12 loginPage">
            <div class="col-md-5 left-cont">
                <img class="logo-cs" src="../../Content/images/logo-cs.png" />
                <div class="tagline-cs">
                    <p class="blue-text"> Learn technology, </p>
                    <p class="white-text"> by doing.</p>
                </div>
            </div>
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/cookies")
    @RenderSection("scripts", required: false)
    @RenderSection("PageScripts", false)
</body>
</html>
